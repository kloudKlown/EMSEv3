% \begin{quote}
%   |\usepackage|\oarg{options}|{bicaption}|\\
%   |\captionsetup[bi-first]{lang=french}|
% \end{quote}
% When not using the \package{babel} or \package{polyglossia} package both approaches
% will have exactly the same effect.
